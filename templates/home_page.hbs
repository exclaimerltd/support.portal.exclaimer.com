<h1 class="visibility-hidden">{{ help_center.name }}</h1>
<div class="container">
  <section class="section knowledge-base">

    <div class="promoted-videos" id="promoVideoSection">
      <div class="owl-carousel owl-theme" id="promoVideos"></div>
    </div>

    {{#if promoted_articles}}
    <div class="promoted-articles">
      <h2>Promoted Articles</h2>
      <div class="promo-articles">
        {{#each promoted_articles}}
        <div class="promo-article-item">
          <a href="{{url}}">
            <span class="promo-article-title">{{title}}</span>
            <span class="promo-article-btn">Read More</span>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
  </section>
