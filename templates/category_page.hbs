<div class="container">
  <div class="promoted-videos" id="promoVideoSection">
    <div class="owl-carousel owl-theme" id="promoVideos"></div>
  </div>

  <div class="category-container">
    <header class="category-header">
      <h1>{{category.name}}</h1>
      {{breadcrumbs}}
      {{#if category.description}}
      <p class="page-header-description">{{category.description}}</p>
      {{/if}}
    </header>

    {{#if category.sections}}
    <ul class="categories">
      {{#each category.sections}}
      <li class="category-item">
        <a href="{{url}}" class="category-item-title">{{name}}</a>
        {{#if sections}}
        <ul class="">
          {{#each sections}}
          <li class="">
            <a href="{{url}}" title="{{name}}">{{name}}</a>
          </li>
          {{/each}}
        </ul>
        {{/if}}

      </li>
      {{/each}}
    </ul>
    {{/if}}
  </div>
</div>